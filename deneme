#include <stdio.h>
int main()
{
    int i=1,maks=0,kare,carpim=1,kare_toplami=0;
        for (i ; i<=maks ; i+=1) 
        {
            if(i % 2 == 0)
            {
                if( i == 0 && maks == 0 )
                {
                    printf("Lutfen 0 dan farkli bir deger giriniz.");
                    return 0;
                }
                else
                {
                    kare = i*i;
                    kare_toplami += kare;
                }
            }
            else
            {
            carpim *= i;
            }
        }
        printf("Cift sayilarin kareleri toplami : %d", kare_toplami);
        printf("Tek sayilarin carpimi : %d", carpim);
        return 0;

    }
        
